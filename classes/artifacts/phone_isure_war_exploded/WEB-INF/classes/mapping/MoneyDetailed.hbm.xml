<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="phoneisure.domain.model.moneydetailed.MoneyDetailed" table="t_money_detailed" lazy="true">
        <id name="id" type="java.lang.String" column="id" unsaved-value="null" length="32">
            <generator class="uuid"/>
        </id>

        <version column="version" name="version" type="java.lang.Integer"/>

        <property name="createDate" column="create_date" type="java.util.Date"/>

        <many-to-one name="merchant" column="merchant_id" class="phoneisure.domain.model.merchant.Merchant"/>
        <property name="flowType" column="flow_type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">phoneisure.core.enums.FlowType</param>
                <param name="type">4</param>
            </type>
        </property>
        <property name="money" column="money" type="java.math.BigDecimal"/>
        <property name="explain" column="explains" type="java.lang.String"/>
        <property name="insuredName" column="insured_name" type="java.lang.String"/>
    </class>
</hibernate-mapping>